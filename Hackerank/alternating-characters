import java.io.*;
import java.util.*;
class AlternateString
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt(),cnt=0;;
		String str="";
		for(int i=0;i<n;i++)
		{
			str=sc.next();
			for(int j=0;j<str.length()-1;j++)
			{
				
				if(str.charAt(j)==str.charAt(j+1))
					cnt++;
			}
			System.out.println(""+cnt);
			cnt=0;
		}
	}
}
